---
interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props;
---

<div class="flex flex-col gap-4">
  <!-- Logo/Brand Row -->
  <div class="flex items-center justify-center sm:justify-start space-x-3">
    <div class="w-10 h-10 bg-gradient-to-br from-emerald-600 to-teal-700 rounded-full flex items-center justify-center">
      <span class="text-white font-bold text-lg">KR</span>
    </div>
    <div class="text-center sm:text-left">
      <h1 class="text-xl font-bold text-gray-900">Karen Rabins, LCSW</h1>
      <p class="text-sm text-gray-600">Licensed Clinical Social Worker</p>
    </div>
  </div>
  
  <!-- Navigation Row -->
  <div class="flex flex-col sm:flex-row items-center justify-center sm:justify-end gap-3 sm:gap-6">
    <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-6">
      <a href="/" class={currentPage === 'home' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1 whitespace-nowrap' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium whitespace-nowrap'}>Home</a>
      <a href="/about" class={currentPage === 'about' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1 whitespace-nowrap' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium whitespace-nowrap'}>About</a>
      <a href="/services" class={currentPage === 'services' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1 whitespace-nowrap' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium whitespace-nowrap'}>Services</a>
      <a href="/ketamine-therapy" class={currentPage === 'ketamine' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1 whitespace-nowrap' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium whitespace-nowrap'}>Ketamine</a>
    </div>
    <a href="/contact" class={`bg-emerald-700 text-white px-4 py-2 rounded-lg hover:bg-emerald-800 transition-colors font-medium whitespace-nowrap ${currentPage === 'contact' ? 'ring-2 ring-emerald-300' : ''}`}>Contact</a>
  </div>
</div>