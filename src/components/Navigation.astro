---
interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props;
---

<div class="flex flex-col sm:flex-row justify-between items-center gap-4">
  <div class="flex items-center space-x-3">
    <div class="w-10 h-10 bg-gradient-to-br from-emerald-600 to-teal-700 rounded-full flex items-center justify-center">
      <span class="text-white font-bold text-lg">KR</span>
    </div>
    <div>
      <h1 class="text-xl font-bold text-gray-900">Karen Rabins, LCSW</h1>
      <p class="text-sm text-gray-600">Licensed Clinical Social Worker</p>
    </div>
  </div>
  <div class="flex flex-wrap gap-6">
    <a href="/" class={currentPage === 'home' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium'}>Home</a>
    <a href="/about" class={currentPage === 'about' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium'}>About Karen</a>
    <a href="/services" class={currentPage === 'services' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium'}>Services</a>
    <a href="/ketamine-therapy" class={currentPage === 'ketamine' ? 'text-emerald-700 font-semibold border-b-2 border-emerald-700 pb-1' : 'text-gray-700 hover:text-emerald-700 transition-colors font-medium'}>Ketamine Therapy</a>
    <a href="/contact" class={currentPage === 'contact' ? 'bg-emerald-700 text-white px-4 py-2 rounded-lg hover:bg-emerald-800 transition-colors font-medium' : 'bg-emerald-700 text-white px-4 py-2 rounded-lg hover:bg-emerald-800 transition-colors font-medium'}>Contact</a>
  </div>
</div>