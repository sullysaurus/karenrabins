---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Contact Karen Rabins, LCSW - Schedule Your Consultation in Raleigh, NC" 
  description="Schedule a consultation with Karen Rabins, LCSW in Raleigh, NC. Free 15-minute consultation available. Telehealth and in-person appointments."
  keywords="Karen Rabins LCSW contact, therapist Raleigh NC appointment, free consultation, telehealth therapy, Raleigh mental health services"
>
  <div slot="nav">
    <Navigation currentPage="contact" />
  </div>

  <!-- Hero Section with Image -->
  <section class="relative py-24 sm:py-32 lg:py-40 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/lake.jpeg" 
        alt="Peaceful lake scene"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight drop-shadow-lg">
          Contact Information
        </h1>
        <p class="text-lg sm:text-xl text-white/90 font-medium drop-shadow">
          To Schedule an Initial Consultation
        </p>
      </div>
    </div>
  </section>

  <!-- Session Options -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-8 sm:mb-12 text-center leading-tight">Session Options</h2>
      
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-lg sm:text-xl text-gray-700 leading-relaxed">
          I offer both in-person and virtual sessions. My office is located in North Raleigh. I use a secure, HIPAA-compliant platform for virtual sessions.
        </p>
      </div>

      <!-- Schedule Consultation Box -->
      <div class="max-w-3xl mx-auto mt-12">
        <div class="bg-white rounded-2xl p-8 shadow-lg border border-teal-100">
          <div class="text-center">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4">Schedule Your Consultation</h3>
            <p class="text-base sm:text-lg text-gray-700 mb-6 leading-relaxed">
              To schedule a consultation, email me at <a href="mailto:krabinstherapy@gmail.com" class="text-teal-600 hover:text-teal-700 font-semibold underline">krabinstherapy@gmail.com</a>. Please let me know if you prefer in-person, virtual, or hybrid sessions.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>