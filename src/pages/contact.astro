---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Contact Karen Rabins, LCSW - Schedule Your Consultation in Raleigh, NC" 
  description="Schedule a consultation with Karen Rabins, LCSW in Raleigh, NC. Free 15-minute consultation available. Telehealth and in-person appointments."
  keywords="Karen Rabins LCSW contact, therapist Raleigh NC appointment, free consultation, telehealth therapy, Raleigh mental health services"
>
  <div slot="nav">
    <Navigation currentPage="contact" />
  </div>

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-purple-50 via-blue-50 to-teal-50">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-0 right-0 w-96 h-96 bg-purple-200 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-teal-200 rounded-full filter blur-3xl"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20 lg:py-24">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-800 mb-6">
          Contact Information
        </h1>
        <p class="text-xl text-purple-700 font-light italic">
          To Schedule a Free 15 Minute Consultation
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information Cards -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-white via-purple-50/30 to-teal-50/30">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Email Card -->
        <div class="bg-gradient-to-br from-purple-50 to-teal-50 rounded-2xl p-8 text-center">
          <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-6 shadow-sm">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">Email Karen</h3>
          <p class="text-gray-700 mb-4">You can email me at:</p>
          <a href="mailto:krabinstherapy@gmail.com" class="text-lg font-semibold text-purple-600 hover:text-purple-700 transition-colors">
            krabinstherapy@gmail.com
          </a>
        </div>
        
        <!-- Location Card -->
        <div class="bg-gradient-to-br from-purple-50 to-teal-50 rounded-2xl p-8 text-center">
          <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center mx-auto mb-6 shadow-sm">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">Location</h3>
          <p class="text-gray-700 mb-2">Serving Raleigh and surrounding areas</p>
          <p class="text-lg font-semibold text-purple-600">Raleigh, NC 27613</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Session Options -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-purple-50 to-teal-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-12 text-center">Session Options</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Virtual Sessions -->
        <div class="bg-white rounded-2xl p-8 shadow-md">
          <h3 class="text-2xl font-bold text-purple-700 mb-4">Virtual Sessions</h3>
          <p class="text-gray-700 mb-6">Secure online therapy sessions from the comfort of your home</p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-purple-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Currently accepting new virtual clients</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-purple-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Secure, HIPAA-compliant platform</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-purple-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Flexible scheduling options</span>
            </li>
          </ul>
        </div>
        
        <!-- In-Person Sessions -->
        <div class="bg-white rounded-2xl p-8 shadow-md">
          <h3 class="text-2xl font-bold text-purple-700 mb-4">In-Person Sessions</h3>
          <p class="text-gray-700 mb-6">Traditional face-to-face therapy in Raleigh, NC</p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-teal-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Comfortable, private office setting</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-teal-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Convenient Raleigh location</span>
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-teal-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-gray-700">Evening appointments available</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- What to Expect -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-white via-purple-50/20 to-teal-50/20">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-12 text-center">What to Expect</h2>
      
      <div class="space-y-8">
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-purple-600 font-bold text-lg">1</span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">Free 15-Minute Consultation</h3>
            <p class="text-gray-700 leading-relaxed">
              Start with a brief phone conversation to discuss your needs, ask questions about my approach, 
              and determine if we're a good fit to work together.
            </p>
          </div>
        </div>
        
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-purple-600 font-bold text-lg">2</span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">First Session</h3>
            <p class="text-gray-700 leading-relaxed">
              In our initial meeting, we'll explore what brought you to therapy, discuss your goals, 
              and begin to understand your unique situation and strengths. This session is generally 60 minutes.
            </p>
          </div>
        </div>
        
        <div class="flex items-start gap-6">
          <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="text-purple-600 font-bold text-lg">3</span>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-800 mb-3">Ongoing Support</h3>
            <div class="space-y-3 text-gray-700 leading-relaxed">
              <p>
                The frequency of sessions is based upon your needs and will be discussed at the intake. 
                Although we discuss goals in the first session, the process is open ended and intended to 
                address your changing needs. You determine what you want to talk about, and I follow your lead. 
                We engage in discussion and work collaboratively. Sessions are 55 minutes.
              </p>
              <p>
                How I respond is determined by what you need. I am an active participant in each discussion 
                and choose when it is best to maintain silence, be directive, ask questions, and give feedback. 
                I also welcome feedback from you so that you get what you need…For many, asking for what one 
                needs is hard. The therapeutic relationship can be a safe place to step out of one's comfort 
                zone in service of more comfort outside of the office.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Insurance & Payment -->
  <section class="py-16 sm:py-20 bg-gradient-to-br from-purple-50 to-teal-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-12 text-center">Insurance & Payment</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Insurance Accepted -->
        <div class="bg-white rounded-2xl p-8 text-center shadow-md">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">Insurance Accepted</h3>
          <ul class="space-y-2 text-gray-700">
            <li>Aetna</li>
            <li>BlueCross BlueShield</li>
            <li>State Health Plan</li>
          </ul>
        </div>
        
        <!-- Payment Methods -->
        <div class="bg-white rounded-2xl p-8 text-center shadow-md">
          <div class="w-16 h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-teal-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
              <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">Payment Methods</h3>
          <ul class="space-y-2 text-gray-700">
            <li>Health Savings Account</li>
            <li>Mastercard</li>
            <li>Visa</li>
            <li>Zelle</li>
          </ul>
        </div>
        
        <!-- Verify Coverage -->
        <div class="bg-white rounded-2xl p-8 text-center shadow-md">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-4">Verify Coverage</h3>
          <p class="text-gray-700">
            Contact me to verify your specific insurance coverage and discuss fees.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 sm:py-20 bg-gradient-to-r from-purple-600 to-teal-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">For a free consultation</h2>
      <p class="text-xl text-white/90 mb-8">For a free consultation, call or email me.</p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
        <a href="tel:9195787109" class="bg-white text-purple-600 px-8 py-4 rounded-full hover:bg-gray-50 transition-all duration-300 shadow-lg font-medium text-lg">
          (919) 578-7109
        </a>
        <a href="mailto:krabinstherapy@gmail.com" class="text-white hover:text-white/90 font-medium text-lg">
          krabinstherapy@gmail.com
        </a>
      </div>
      
      <p class="text-white/90">Free 15-minute consultation • Virtual and in-person sessions available</p>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>