---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Contact Karen Rabins, LCSW - Schedule Your Consultation in Raleigh, NC" 
  description="Schedule a consultation with Karen Rabins, LCSW in Raleigh, NC. Free 15-minute consultation available. Telehealth and in-person appointments."
  keywords="Karen Rabins LCSW contact, therapist Raleigh NC appointment, free consultation, telehealth therapy, Raleigh mental health services"
>
  <div slot="nav">
    <Navigation currentPage="contact" />
  </div>

  <!-- Hero Section with Image -->
  <section class="relative py-24 sm:py-32 lg:py-40 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/lake.jpeg" 
        alt="Peaceful lake scene"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-6 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight drop-shadow-lg">
          Contact Information
        </h1>
        <p class="text-lg sm:text-xl text-white/90 font-medium drop-shadow">
          To Schedule an Initial Consultation
        </p>
      </div>
    </div>
  </section>

  <!-- Session Options -->
  <section class="py-12 sm:py-16 lg:py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-6 sm:px-6 lg:px-8">
      <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-800 mb-8 sm:mb-12 text-center leading-tight">Session Options</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8 max-w-5xl mx-auto">
        <!-- Virtual Sessions -->
        <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-sm border border-gray-100">
          <h3 class="text-xl sm:text-2xl font-bold text-sky-700 mb-3 sm:mb-4 leading-tight">Virtual Sessions</h3>
          <p class="text-gray-700 mb-4 sm:mb-6 leading-relaxed">Secure online therapy sessions from the comfort of your home</p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-sky-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Currently accepting new virtual clients</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-sky-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Secure, HIPAA-compliant platform</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-sky-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Flexible scheduling options</span>
            </li>
          </ul>
        </div>
        
        <!-- In-Person Sessions -->
        <div class="bg-white rounded-2xl p-6 sm:p-8 shadow-sm border border-gray-100">
          <h3 class="text-xl sm:text-2xl font-bold text-sky-700 mb-3 sm:mb-4 leading-tight">In-Person Sessions</h3>
          <p class="text-gray-700 mb-4 sm:mb-6 leading-relaxed">Traditional face-to-face therapy in Raleigh, NC</p>
          <ul class="space-y-3">
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-teal-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Comfortable, private office setting</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-teal-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Convenient Raleigh location</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-2 h-2 bg-teal-600 rounded-full flex-shrink-0"></div>
              <span class="text-gray-700">Evening appointments available</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white">
    <div class="max-w-4xl mx-auto px-6 sm:px-6 lg:px-8">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4 sm:mb-6 leading-tight">Get In Touch</h2>
        <div class="w-16 h-1 bg-teal-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 sm:gap-12">
        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4 sm:mb-6">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 sm:mb-3">Email</h3>

          <a href="mailto:krabinstherapy@gmail.com" class="inline-block text-base sm:text-lg font-semibold text-teal-600 hover:text-teal-700 transition-colors bg-teal-50 hover:bg-teal-100 px-3 sm:px-4 py-2 rounded-lg break-all">
            krabinstherapy@gmail.com
          </a>
        </div>
        
        <div class="text-center">
          <div class="w-14 h-14 sm:w-16 sm:h-16 bg-teal-100 rounded-full flex items-center justify-center mx-auto mb-4 sm:mb-6">
            <svg class="w-7 h-7 sm:w-8 sm:h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 sm:mb-3">Location</h3>
          <p class="text-base sm:text-lg font-semibold text-teal-600 bg-teal-50 px-3 sm:px-4 py-2 rounded-lg inline-block">Raleigh, NC 27613</p>
        </div>
      </div>
    </div>
  </section>
  <Footer slot="footer" />
</BaseLayout>