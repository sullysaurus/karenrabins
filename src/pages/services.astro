---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout 
  title="Therapy Services - Karen Rabins, LCSW in Raleigh, NC" 
  description="Comprehensive therapy services with Karen Rabins, LCSW in Raleigh, NC. Specializing in life transitions, anxiety, depression, family conflict, parenting, and relationship issues. Over 30 years of experience."
  keywords="therapy services Raleigh NC, life transitions therapy, anxiety counseling, depression treatment, family conflict therapy, parenting support, relationship counseling, LCSW Raleigh"
>
  <div slot="nav">
    <Navigation currentPage="services" />
  </div>

  <!-- Hero Section -->
  <section class="relative overflow-hidden mb-12 sm:mb-16 lg:mb-20">
    <!-- Background with subtle pattern -->
    <div class="absolute inset-0 bg-gradient-to-br from-emerald-50 via-teal-25 to-emerald-100 opacity-60"></div>
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, rgba(34, 197, 94, 0.1) 0%, transparent 50%), radial-gradient(circle at 75% 75%, rgba(20, 184, 166, 0.1) 0%, transparent 50%)"></div>
    
    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12 lg:py-20">
