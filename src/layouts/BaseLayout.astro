---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: URL;
  keywords?: string;
  author?: string;
}

const { 
  title, 
  description = "Compassionate mental health care with Karen Rabins, Licensed Clinical Social Worker in Raleigh, NC", 
  image = "/bg.jpg", 
  canonicalURL,
  keywords = "therapist Raleigh NC, LCSW, anxiety therapy, depression counseling, life transitions therapy, mental health Raleigh",
  author = "Karen Rabins, Licensed Clinical Social Worker"
} = Astro.props;

const currentURL = canonicalURL || new URL(Astro.url.pathname, Astro.site);
const fullImageURL = new URL(image, Astro.url).toString();
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator} />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content={author} />
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow" />
  <link rel="canonical" href={currentURL} />
  
  <!-- Local SEO -->
  <meta name="geo.region" content="US-NC" />
  <meta name="geo.placename" content="Raleigh, North Carolina" />
  <meta name="geo.position" content="35.7796;-78.6382" />
  <meta name="ICBM" content="35.7796, -78.6382" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={currentURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={fullImageURL} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:locale" content="en_US" />
  <meta property="og:site_name" content="Karen Rabins Therapy" />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={currentURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={fullImageURL} />
  <meta name="twitter:image:alt" content="Karen Rabins Therapy - Mental Health Services in Raleigh, NC" />
  <meta name="twitter:creator" content="@KarenRabinsTherapy" />
  <meta name="twitter:site" content="@KarenRabinsTherapy" />
  
  <!-- Google Fonts - Quicksand, Work Sans -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&family=Work+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Favicon and Icons -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon.svg" />
  <link rel="mask-icon" href="/favicon.svg" color="#0ea5e9" />
  <meta name="theme-color" content="#0ea5e9" />
  <meta name="msapplication-TileColor" content="#0ea5e9" />
  
  <!-- Schema.org JSON-LD for Local Business -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "MedicalBusiness",
      "@id": "https://karenrabinstherapy.com/#organization",
      "name": "Karen Rabins Therapy",
      "description": "Licensed Clinical Social Worker providing compassionate mental health care, anxiety therapy, depression counseling, trauma therapy, and life transitions support in Raleigh, North Carolina.",
      "url": "https://karenrabinstherapy.com",
      "telephone": "+19195787109",
      "email": "krabinstherapy@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Raleigh",
        "addressRegion": "NC",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "35.7796",
        "longitude": "-78.6382"
      },
      "areaServed": {
        "@type": "City",
        "name": "Raleigh, North Carolina"
      },
      "medicalSpecialty": [
        "Clinical Social Work",
        "Anxiety Therapy",
        "Depression Counseling",
        "Life Transitions Therapy",
        "Family Therapy"
      ],
      "priceRange": "$$",
      "paymentAccepted": "Cash, Credit Card, Insurance",
      "currenciesAccepted": "USD",
      "founder": {
        "@type": "Person",
        "name": "Karen Rabins",
        "jobTitle": "Licensed Clinical Social Worker",
        "telephone": "+19195787109",
        "email": "krabinstherapy@gmail.com"
      },
      "hasCredential": {
        "@type": "EducationalOccupationalCredential",
        "credentialCategory": "Professional License",
        "name": "Licensed Clinical Social Worker",
        "recognizedBy": {
          "@type": "Organization",
          "name": "North Carolina Social Work Certification and Licensure Board"
        }
      }
    }
  </script>
  
  <!-- Website Schema -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Karen Rabins Therapy",
      "description": {JSON.stringify(description)},
      "url": {JSON.stringify(currentURL.toString())},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://karenrabinstherapy.com/search?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    }
  </script>
</head>
<body class="min-h-screen flex flex-col bg-white text-gray-900 antialiased">
  <!-- Skip Link for Accessibility -->
  <a href="#main" class="skip-link">Skip to main content</a>
  
  <header class="bg-white sticky top-0 z-50 border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4">
      <slot name="nav" />
    </div>
  </header>
  
  <main id="main" class="flex-1 w-full">
    <slot />
  </main>
  
  <slot name="footer" />
</body>
</html>